<div class="clearfix">
	<div class="panel panel-default">
		<div class='panel-heading'>
			<strong>Informations Print :</strong>
		</div>
		<div class="panel-body">
			<table class="table table-bordered table-hover table-striped">
				<tr>
					<td>Bon à tirer</td>
					<td><%= f.select(:test_print, options_for_select(t("test_print").invert, @project.test_print), {:include_blank => 'Sélectionner un statut de bon à tirer'}, class: 'form-control')%></td>
				</tr>
				<tr>
					<td>Couleur</td>
					<td> <%= f.select(:colors, options_for_select(t("project_colors").invert, @project.colors), {:include_blank => 'Selectionner un type de couleur'}, class: 'form-control')%> </td>
				</tr>
				<tr>
					<td>Données variables</td>
					<td><%= f.check_box :various_input%></td>
				</tr>
				<tr>
					<td>Quantité bonnes feuilles</td>
					<td><%= f.text_field :good_sheets_qty, class: "form-control"%></td>
				</tr>
				<tr>
					<td>Quantité documents finis</td>
					<td><%= f.text_field :finished_doc_qty, class: "form-control"%></td>
				</tr>
				<tr>
					<td>Laisser brut de tirage</td>
					<td><%= f.check_box :let_raw %></td>
				</tr>
				<tr>
					<td>Format ouvert</td>
					<td><%= f.select(:open_shape, options_for_select(t("open_shapes").invert, @project.open_shape), {:include_blank => 'Sélectionner un type de format ouvert'}, class: 'form-control')%></td>
				</tr>
				<tr>
					<td>Format Fini</td>
					<td><%= f.select(:finished_shape, options_for_select(t("finished_shapes").invert, @project.finished_shape), {:include_blank => 'Sélectionner un type de format de produit fini'}, class: 'form-control')%></td>
				</tr>
				<tr>
					<td>Format spécial</td>
					<td><%= f.text_field :special_shape, class: "form-control"%></td>
				</tr>
				<tr>
					<td>Pelliculage ou plastification</td>
					<td><%= f.select(:filming, options_for_select(t("filmings").invert, @project.filming), {:include_blank => 'Sélectionner un pelliculage ou plastification'}, class: 'form-control')%></td>
				</tr>
				<tr>
					<td>Façonnage</td>
					<td><%= f.select(:shaping, options_for_select(t("shapings").invert, @project.shaping), {:include_blank => 'Sélectionner un façonnage'}, class: 'form-control')%></td>
				</tr>
				<tr>
					<td>Façonnage divers</td>
					<td><%= f.text_field :diverse_shape, class: "form-control"%></td>
				</tr>
				<tr>
					<td>Paquetage</td>
					<td><%= f.select(:package, options_for_select(t("packages").invert, @project.package), {:include_blank => 'Sélectionner un paquetage'}, class: 'form-control')%></td>
				</tr>
				<tr>
					<td>Livraison</td>
					<td><%= f.select(:carrier_id, options_from_collection_for_select(Carrier.all, :id, :name, @project.carrier_id), {:include_blank => 'Sélectionner un mode de livraison'}, class: 'form-control')%></td>
				</tr>
				<tr>
					<td>Numéro de suivi</td>
					<td><%= f.text_field :tracking_nbr, class: 'form-control'%></td>
				</tr>
				<tr>
					<td>Nombre de colis</td>
					<td><%= f.text_field :package_nbr, class: 'form-control'%></td>
				</tr>
				<tr>
					<td>Envoyer le mail de suivi</td>
					<% if !@project.tracking_email? %>
					<td><%= f.check_box :tracking_email, class: 'form-control'%></td>
					<% else %>
					<td>L'email de suivi à déjà été envoyé.</td>
					<% end %>
				</tr>
				<tr>
					<td>Adresse de livraison (si différente de la fiche client)

					<% if !@project.new_record? %>
					<%= link_to "Voir le Bon de livraison", delivery_form_path(@project.id, :format => :pdf), class: "btn btn-danger"%>
					<% end %> </td>
					<td><%= f.text_area :delivery_address, class: 'form-control'%></td>
				</tr>
				<tr>
					<td>Remarques</td>
					<td><%= f.text_area :notice, class: 'form-control'%></td>
				</tr>
				<tr>
					<td>Sous-traitance</td>
					<td><%= f.text_area :outsourcing, class: 'form-control'%></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="panel panel-info">
		<div class="panel-heading">
			<strong>Papier(s)</strong>
		</div>
		<div class="panel-body">
			<%= f.fields_for :papers do |pa| %>
			<% render 'projects/forms/paper_fields', :f => pa %>
			<% end %>
			<p class="text-left">
				<%= link_to_add_association '<span class="glyphicon glyphicon-plus"></span>'.html_safe, f, :papers, class: "btn btn-success", :partial => '/projects/forms/paper_fields' %>
			</p>
		</div>
	</div>
</div>
