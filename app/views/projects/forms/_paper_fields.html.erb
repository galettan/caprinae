<div class="nested-fields">
	<table class="table table-striped table-bordered">
		<tr>
			<td>
				<%= f.label :sorte%>
				<% if !@project.papers[f.index.to_i].nil? %>
					<%= f.select(:paper, options_for_select(t("paper_paper").invert, @project.papers[f.index.to_i].paper), {:include_blank => 'Sélectionner un type de papier'}, class: 'form-control')%>
				<% else %>
					<%= f.select(:paper, options_for_select(t("paper_paper").invert), {:include_blank => 'Sélectionner un type de papier'}, class: 'form-control')%>
				<% end %>
			</td>
			<td>
				<%= f.label :grammage %>
				<% if !@project.papers[f.index.to_i].nil? %>
					<%= f.select(:density, options_for_select(t("paper_density").invert, @project.papers[f.index.to_i].density), {:include_blank => 'Sélectionner un grammage'}, class: 'form-control')%>
				<% else %>
					<%= f.select(:density, options_for_select(t("paper_density").invert), {:include_blank => 'Sélectionner un grammage'}, class: 'form-control')%>
				<% end%>
			</td>
			<td>
				<%= f.label :format%>
				<% if !@project.papers[f.index.to_i].nil? %>
					<%= f.select(:shape, options_for_select(t("paper_shape").invert, @project.papers[f.index.to_i].shape), {:include_blank => 'Selectionner un type de format de papier'}, class: 'form-control')%>
				<% else %>
					<%= f.select(:shape, options_for_select(t("paper_shape").invert), {:include_blank => 'Selectionner un type de format de papier'}, class: 'form-control')%>
				<% end %>	
			</td>
			<td>
				<%= link_to_remove_association '<span class="glyphicon glyphicon-trash"></span>'.html_safe, f, class: "btn btn-danger" %>		
			</td>
		</tr>
	</table>
</div>
