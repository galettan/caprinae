<div class="nested-fields">
	<table class="table table-striped table-bordered">
		<tr>
			<td>
				<%= f.label :sorte%>
				<%= f.select(:paper, options_for_select(t("paper_paper").invert), {:include_blank => 'Sélectionner un type de papier'}, class: 'form-control')%>
			</td>
			<td>
				<%= f.label :grammage %>
				<%= f.select(:density, options_for_select(t("paper_density").invert), {:include_blank => 'Sélectionner un grammage'}, class: 'form-control')%>
			</td>
			<td>
				<%= f.label :format%>
				<%= f.select(:shape, options_for_select(t("paper_shape").invert), {:include_blank => 'Selectionner un type de format de papier'}, class: 'form-control')%>
	
			</td>
			<td>
				<%= link_to_remove_association '<span class="glyphicon glyphicon-trash"></span>'.html_safe, f, class: "btn btn-danger" %>		
			</td>
		</tr>
	</table>
</div>
