<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Liste des Stocks papiers</strong>
  </div>
  <div class="panel-body">
    <table class="table table-striped text-center table-bordered table-hover">
      <thead>
        <th colspan="4">Nom</th>
      </thead>
      <tbody>
          <% @paperstocks.each do |paperstock| %>
          <tr>
            <td colspan="4" bgcolor="#0033cc"><%= link_to paperstock.name, edit_paperstock_path(paperstock) %></td>
          </tr>
            <% paperstock.paperstock_items.each do |paperstock_item|%>
              <tr>
                <td bgcolor="#3399ff"><%= paperstock_item.name %></td>
                <td bgcolor=<%= paperstock_item.thirtytwofortyfive < 1000 ? "#FF0000" : "#FFA500" %>><%= paperstock_item.thirtytwofortyfive %></td>
                <td bgcolor=<%= paperstock_item.fiftytwoseventytwo < 1000 ? "#FF0000" : "#FFA500" %>><%= paperstock_item.fiftytwoseventytwo %></td>
                <td><%= paperstock_item.toorder%></td>
              </tr>
            <% end %>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
